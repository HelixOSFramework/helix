{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Kernel (QEMU + GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/output/helix-kernel",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "miDebuggerServerAddress": "localhost:1234",
      "setupCommands": [
        {
          "description": "Set architecture",
          "text": "set architecture i386:x86-64",
          "ignoreFailures": false
        },
        {
          "description": "Enable pretty-printing",
          "text": "set print pretty on",
          "ignoreFailures": true
        },
        {
          "description": "Enable Rust demangling",
          "text": "set demangle-style gnu-v3",
          "ignoreFailures": true
        },
        {
          "description": "Load symbols",
          "text": "symbol-file ${workspaceFolder}/build/output/helix-kernel",
          "ignoreFailures": false
        }
      ],
      "preLaunchTask": "Start QEMU Debug Server",
      "logging": {
        "moduleLoad": false,
        "trace": false,
        "engineLogging": false,
        "programOutput": true,
        "exceptions": true
      }
    },
    {
      "name": "Attach to QEMU",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/output/helix-kernel",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "miDebuggerServerAddress": "localhost:1234",
      "setupCommands": [
        {
          "description": "Set architecture",
          "text": "set architecture i386:x86-64",
          "ignoreFailures": false
        },
        {
          "description": "Enable pretty-printing",
          "text": "set print pretty on",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug Tests (Host)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/x86_64-unknown-linux-gnu/debug/deps/${fileBasenameNoExtension}",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Tests"
    },
    {
      "name": "Debug Current Test",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--target",
          "x86_64-unknown-linux-gnu",
          "--lib"
        ],
        "filter": {
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
