# =============================================================================
# Helix OS - Environment Variables Example
# =============================================================================
# Copy this file to .env and customize for your local environment
# NEVER commit .env files with actual secrets!
# =============================================================================

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------

# Default build profile: debug | release | production
HELIX_BUILD_PROFILE=release

# Target architecture: x86_64 | aarch64 | riscv64
HELIX_TARGET_ARCH=x86_64

# Target triple override (leave empty for auto-detection)
HELIX_TARGET_TRIPLE=

# Number of parallel jobs (leave empty for auto: nproc)
HELIX_JOBS=

# Enable verbose build output: 0 | 1
HELIX_VERBOSE=0

# Enable incremental compilation: 0 | 1
HELIX_INCREMENTAL=1

# Rust log level for build scripts: error | warn | info | debug | trace
RUST_LOG=info

# Rust backtrace: 0 | 1 | full
RUST_BACKTRACE=1

# -----------------------------------------------------------------------------
# QEMU Configuration
# -----------------------------------------------------------------------------

# Path to QEMU binary (leave empty for system default)
QEMU_PATH=

# QEMU system binary name
QEMU_SYSTEM_X86_64=qemu-system-x86_64
QEMU_SYSTEM_AARCH64=qemu-system-aarch64
QEMU_SYSTEM_RISCV64=qemu-system-riscv64

# Memory allocation for QEMU (in MB)
QEMU_MEMORY=512

# Number of CPUs for QEMU
QEMU_CPUS=4

# Enable KVM acceleration: 0 | 1
QEMU_KVM=1

# QEMU display: none | gtk | sdl | curses
QEMU_DISPLAY=none

# GDB debug port
QEMU_GDB_PORT=1234

# Serial output: stdio | file | pty | none
QEMU_SERIAL=stdio

# QEMU extra arguments
QEMU_EXTRA_ARGS=

# Path to OVMF firmware for UEFI boot (leave empty to skip UEFI)
OVMF_PATH=/usr/share/OVMF/OVMF_CODE.fd

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------

# Test timeout in seconds
HELIX_TEST_TIMEOUT=300

# Run tests in parallel: 0 | 1
HELIX_TEST_PARALLEL=1

# Test output directory
HELIX_TEST_OUTPUT=build/test-results

# Coverage enabled: 0 | 1
HELIX_COVERAGE=0

# Coverage output format: lcov | html | json
HELIX_COVERAGE_FORMAT=lcov

# -----------------------------------------------------------------------------
# Toolchain Configuration
# -----------------------------------------------------------------------------

# Path to custom linker (leave empty for default)
HELIX_LINKER=

# Path to cross-compilation toolchain
HELIX_CROSS_PREFIX=

# GDB binary name
HELIX_GDB=gdb

# Objdump binary
HELIX_OBJDUMP=objdump

# Objcopy binary
HELIX_OBJCOPY=objcopy

# Readelf binary
HELIX_READELF=readelf

# -----------------------------------------------------------------------------
# Filesystem Configuration
# -----------------------------------------------------------------------------

# Default filesystem image size (in MB)
HELIX_FS_SIZE=64

# Filesystem type: helixfs | fat32 | ext2
HELIX_FS_TYPE=helixfs

# Mount point for development filesystem
HELIX_FS_MOUNT=/tmp/helix-fs

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# Kernel log level: error | warn | info | debug | trace
HELIX_LOG_LEVEL=debug

# Log to serial: 0 | 1
HELIX_LOG_SERIAL=1

# Log to framebuffer: 0 | 1
HELIX_LOG_FRAMEBUFFER=0

# Log buffer size (in KB)
HELIX_LOG_BUFFER_SIZE=64

# Log file path (for build/host logs)
HELIX_LOG_FILE=build/logs/helix.log

# -----------------------------------------------------------------------------
# CI/CD Configuration
# -----------------------------------------------------------------------------

# CI mode (disables interactive features): 0 | 1
CI=0

# GitHub Actions
GITHUB_ACTIONS=

# GitLab CI
GITLAB_CI=

# Artifact output directory for CI
HELIX_ARTIFACT_DIR=build/artifacts

# -----------------------------------------------------------------------------
# AI/ML Configuration (for AI-assisted development tools)
# -----------------------------------------------------------------------------

# OpenAI API key (for AI-assisted code review, etc.)
OPENAI_API_KEY=

# Anthropic API key
ANTHROPIC_API_KEY=

# Model selection
AI_MODEL=

# AI features enabled: 0 | 1
AI_ENABLED=0

# -----------------------------------------------------------------------------
# Documentation Configuration
# -----------------------------------------------------------------------------

# Documentation output directory
HELIX_DOC_OUTPUT=build/docs

# Enable private items in documentation: 0 | 1
HELIX_DOC_PRIVATE=0

# Documentation server port (for local preview)
HELIX_DOC_PORT=8000

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# Enable security hardening in debug builds: 0 | 1
HELIX_SECURITY_DEBUG=0

# Stack protector: none | strong | all
HELIX_STACK_PROTECTOR=strong

# Enable ASLR in tests: 0 | 1
HELIX_ASLR=1

# Signing key path (for signed kernel images)
HELIX_SIGNING_KEY=

# -----------------------------------------------------------------------------
# Performance Profiling
# -----------------------------------------------------------------------------

# Enable profiling instrumentation: 0 | 1
HELIX_PROFILE=0

# Profiling output directory
HELIX_PROFILE_OUTPUT=build/profile

# Sampling rate for profiler (Hz)
HELIX_PROFILE_RATE=1000

# Flamegraph generation: 0 | 1
HELIX_FLAMEGRAPH=0
