# =============================================================================
# Helix OS - EditorConfig
# =============================================================================
# https://editorconfig.org
# Consistent coding styles across all editors and IDEs
# =============================================================================

root = true

# -----------------------------------------------------------------------------
# Default settings for all files
# -----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

# -----------------------------------------------------------------------------
# Rust source files
# -----------------------------------------------------------------------------
[*.rs]
indent_size = 4
max_line_length = 100

# -----------------------------------------------------------------------------
# TOML configuration files
# -----------------------------------------------------------------------------
[*.toml]
indent_size = 4

[Cargo.toml]
indent_size = 4

# -----------------------------------------------------------------------------
# Assembly files
# -----------------------------------------------------------------------------
[*.{asm,s,S}]
indent_size = 4
indent_style = space

[*.inc]
indent_size = 4

# -----------------------------------------------------------------------------
# Linker scripts
# -----------------------------------------------------------------------------
[*.ld]
indent_size = 4

# -----------------------------------------------------------------------------
# Shell scripts
# -----------------------------------------------------------------------------
[*.{sh,bash,zsh}]
indent_size = 4
shell_variant = bash

[Makefile]
indent_style = tab
indent_size = 4

[justfile]
indent_size = 4
indent_style = space

# -----------------------------------------------------------------------------
# Markdown and documentation
# -----------------------------------------------------------------------------
[*.md]
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[*.{rst,txt}]
indent_size = 2

# -----------------------------------------------------------------------------
# YAML and JSON
# -----------------------------------------------------------------------------
[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.json5]
indent_size = 2

# -----------------------------------------------------------------------------
# Web files (if any tooling)
# -----------------------------------------------------------------------------
[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

# -----------------------------------------------------------------------------
# Python (for AI tools and scripts)
# -----------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 88

[*.pyi]
indent_size = 4

# -----------------------------------------------------------------------------
# C/C++ headers (for FFI compatibility)
# -----------------------------------------------------------------------------
[*.{c,h}]
indent_size = 4

[*.{cpp,hpp,cc,hh,cxx,hxx}]
indent_size = 4

# -----------------------------------------------------------------------------
# Git and CI configuration
# -----------------------------------------------------------------------------
[.git*]
indent_size = 4

[.github/**/*]
indent_size = 2

[.gitlab-ci.yml]
indent_size = 2

# -----------------------------------------------------------------------------
# Docker
# -----------------------------------------------------------------------------
[Dockerfile*]
indent_size = 4

[docker-compose*.{yml,yaml}]
indent_size = 2

# -----------------------------------------------------------------------------
# Nix
# -----------------------------------------------------------------------------
[*.nix]
indent_size = 2

[flake.nix]
indent_size = 2

# -----------------------------------------------------------------------------
# Generated files - preserve as-is
# -----------------------------------------------------------------------------
[*.generated.*]
indent_style = unset
indent_size = unset
trim_trailing_whitespace = false

[*.min.*]
indent_style = unset
indent_size = unset
insert_final_newline = false
